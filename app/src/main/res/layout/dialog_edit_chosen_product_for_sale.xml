<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_chosen_product_for_sale_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_number_product"
        android:inputType="number" />

    <Button
        android:id="@+id/edit_chosen_product_for_sale_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/save" />

    <Button
        android:id="@+id/edit_chosen_product_for_sale_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/dialog_select_cancel" />

</LinearLayout>